.chart#action_chart
- content_for(:javascript) do
  coffee:
    $ ->
       chart = new Highcharts.Chart
          chart:
            renderTo: 'action_chart'
            defaultSeriesType: 'line'
          title:
            text: 'GitHub Actions by Month'
          xAxis:
            categories: gon.actionCountByMonthCategories
            labels:
              rotation: -45
              align: 'right'
              step: gon.actionCountByMonthStep
          yAxis:
            min: 0
            title:
              text: null
          tooltip:
            formatter: ->
              this.y + (if this.y != 1 then ' actions' else ' action') + ' in ' + this.x;
          series: [
            { name: 'Tweets', data: gon.actionCountByMonthData }
          ]
