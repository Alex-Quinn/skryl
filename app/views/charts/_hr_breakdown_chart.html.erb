<% content_for :javascript do %>
<script type='text/javascript'>
  (function() {

    $(function() {
      var chart;
      return chart = new Highcharts.Chart({
        chart: {
          renderTo: 'activity_breakdown_chart<%= record_id %>'
        },
        title: {
          text: ''
        },
        subtitle: {
          text: 'Workout'
        },
        tooltip: { shared: true },
        xAxis: {
          tickInterval: 10,
          startOnTick: false,
          categories: gon.activity_breakdown_chart_categories["<%= record_id %>"],
          labels: {
            rotation: -45,
            align: 'right',
            overflow: 'justify',
            step: 2
          }
        },
        yAxis: {
          min: 60,
          max: 180,
          tickInterval: 40,
          startOnTick: false,
          minorGridLineWidth: 0,
          gridLineWidth: 0,
          alternateGridColor: null,
          title: { text: null },
          labels: { enabled: false }
        },
        plotOptions: {
          spline: {
            marker: { enabled: false, states: { hover: { enabled: true, radius: 5 } } },
            states: { hover: { lineWidth: 2 } },
            shadow: false
          }
        },
        tooltip: {
          formatter: function() {
            return this.y + 'bpm at ' + this.x
          }
        },
        series: [{
          name: 'Heart Rate',
          color: '#AA4643',
          data: gon.activity_breakdown_chart_data["<%= record_id %>"],
          type: 'spline'
        }]
      });
    });

  }).call(this);
</script>
<% end %>
