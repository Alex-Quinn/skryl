.chart#book_chart
- content_for(:javascript) do
  coffee:
    $ ->
      chart = new Highcharts.Chart
        chart:
          renderTo: 'book_chart'
          defaultSeriesType: 'bar'
        title:
          text: 'Number of Books Read by Year'
        xAxis:
          categories: gon.bookCountByYearCategories
          title:
            text: null
        yAxis:
          min: 0
          title:
            text: null
        tooltip:
          formatter: ->
            this.y + (if this.y != 1 then ' books read' else ' book read') + ' in ' + this.x
        plotOptions:
          bar:
            dataLabels:
              enabled: true
        series: [
          { name: 'Books read', data: gon.bookCountByYearData }
        ]
